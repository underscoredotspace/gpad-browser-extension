{
    "name": "GPAD",
    "version": "1.2",
    "description": "GPAD Things",
    "manifest_version": 2,
    "background": {
        "scripts": ["index.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["https://socialclub.rockstargames.com/member/*/games"],
            "js": ["inject.js"],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "https://socialclub.rockstargames.com/member/*/games",
        "https://scapi.rockstargames.com/*"
    ]
}
